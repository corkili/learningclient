<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reply_index"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/QDTextAppearanceListItem"
        android:textColor="@color/qmui_config_color_gray_1"
        android:text="reply_index"
        android:maxEms="8"
        android:singleLine="true"
        android:ellipsize="marquee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/reply_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/QDTextAppearanceListItem"
        android:textColor="@color/qmui_config_color_gray_2"
        android:text="reply_user_name"
        android:maxEms="8"
        android:singleLine="true"
        android:ellipsize="marquee"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/reply_index"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/reply_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/QDTextAppearanceListItem"
        android:text="reply_content"
        android:singleLine="false"
        android:scrollHorizontally="false"
        app:layout_constraintLeft_toRightOf="@id/reply_index"
        app:layout_constraintTop_toBottomOf="@id/reply_user_name"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/reply_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/QDTextAppearanceListItemSmall"
        android:text="reply_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reply_content" />

</android.support.constraint.ConstraintLayout>